<form class="form-group form-horizontal">
  <textarea name="comment[body]"
            id="comment_body"
            class="form-control"
            placeholder="Your comment goes here"
            ><%= comment ? comment.escape('body') : '' %></textarea>
  <button class="btn btn-success <%= comment ? 'submit-edit' : 'add-comment' %>">
    <%= comment ? 'Submit Changes' : 'Add Comment' %>
  </button>
</form>
