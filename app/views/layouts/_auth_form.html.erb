<% if flash[:errors] %>
  <ul class="errors">
    <% flash[:errors].each do |error| %>
      <li class="error"><%= error %></li>
    <% end %>
  </ul>
<% end %>

<form action="<%= action_url %>" method="post" class="form-group">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="user_email">Email</label>
  <input type="text"
         name="user[email]"
         value="<%= user.email %>"
         id="user_email"
         class="form-control">
  <br><br>
  <label for="user_password">Password</label>
  <input type="password"
         name="user[password]"
         id="user_password"
         class="form-control">
  <br><br>
  <input type="submit">
</form>
